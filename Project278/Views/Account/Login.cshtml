@model LoginViewModel
@{
    ViewBag.Title = "Log In";
    var errorMessage = TempData["Error"] as string;
}

<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="/Account/Login" role="tab"
      aria-controls="pills-login" aria-selected="true">Login</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="tab-register" data-mdb-toggle="pill" href="/Account/Register" role="tab"
      aria-controls="pills-register" aria-selected="false">Register</a>
  </li>
</ul>
<!-- Pills navs -->

<!-- Pills content -->
<div class="tab-content">
  <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <h4 class="text-danger p-2  ">@errorMessage</h4>
        }
        <form asp-controler="Account" asp-action="Login" method="post">
      <!-- Username or Email input -->
      <div class="form-outline mb-4">
        <span asp-validation-for="Username" class="text-danger text-requirement"></span>
        <input type="text" name="username" asp-for="Username" id="loginName" class="form-control" required/>
        <label class="form-label" for="loginName">Username</label>
      </div>

      <!-- Password input -->
      <div class="form-outline mb-4">
        <span asp-validation-for="Password" class="text-danger text-requirement"></span>
        <input type="password" name="password" asp-for="Password" id="loginPassword" class="form-control" required/>
        <label class="form-label" for="loginPassword">Password</label>
      </div>

      <!-- 2 column grid layout -->
      <div class="row mb-4">
        <div class="col-md-6 d-flex justify-content-start">
          <!-- Checkbox -->
          <div class="form-check mb-3 mb-md-0">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="loginCheck" checked />
            <label class="form-check-label" for="loginCheck"> Remember me </label>
          </div>
        </div>
      </div>

      <!-- Submit button -->
      <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

      <!-- Register buttons -->
      <div class="text-center">
        <p>Not a member? <a href="/Account/Register">Register</a></p>
      </div>
    </form>
  </div>
</div>
<!-- Pills content -->
@section Scripts {
    @{
        <partial name="_validationScriptsPartial" />
    }
}